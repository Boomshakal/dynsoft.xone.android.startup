<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/cpk_linearlayout"
    android:background="@color/megmeet_green"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cpk_item_textview_id"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="0dp"
        android:paddingTop="@dimen/card_text_size"
        android:paddingBottom="@dimen/card_text_size"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cpk_item_textview_code"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:paddingTop="@dimen/card_text_size"
        android:paddingBottom="@dimen/card_text_size"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cpk_item_textview_name"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cpk_item_textview_unit"
        android:layout_width="0dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

</LinearLayout>