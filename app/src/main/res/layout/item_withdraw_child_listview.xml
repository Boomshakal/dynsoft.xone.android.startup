<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_lot_number"
        android:text="父件序列号"
        style="@style/style_work_textview"
        android:layout_weight="3" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/megmeet_green" />

    <TextView
        android:id="@+id/txt_bind_lot_number"
        android:text="子件序列号"
        style="@style/style_work_textview"
        android:layout_weight="3" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/megmeet_green" />

    <TextView
        android:id="@+id/txt_work_time"
        android:text="创建时间"
        style="@style/style_work_textview"
        android:layout_weight="2" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/megmeet_green" />

    <TextView
        android:id="@+id/txt_worker"
        android:text="作业员"
        style="@style/style_work_textview"
        android:layout_weight="2" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/megmeet_green" />

    <TextView
        android:id="@+id/txt_cur_sequence"
        android:text="工序"
        style="@style/style_work_textview"
        android:layout_weight="2" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/megmeet_green" />

    <TextView
        android:id="@+id/txt_task_order_code"
        android:text="生产任务"
        style="@style/style_work_textview"
        android:layout_weight="3" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/megmeet_green" />

    <TextView
        android:id="@+id/txt_item_code"
        style="@style/style_work_textview"
        android:text="产品名称"
        android:layout_weight="4" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/megmeet_green" />
</LinearLayout>