<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_codeinfo_cell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/mistyrose"
            android:gravity="right"
            android:paddingRight="@dimen/ui_10_dip"
            android:text="产品编码："
            android:textColor="@color/blue"

            ></TextView>


        <TextView
            android:id="@+id/txt_item_code_cell"
            android:layout_width="0dp"
            android:textColor="@color/blue"
            android:layout_weight="3"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_nameinfo_cell"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="@dimen/ui_10_dip"
            android:background="@color/mistyrose"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:text="产品型号："

            ></TextView>


        <TextView
            android:id="@+id/txt_item_name_cell"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textColor="@color/blue"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_snnumber_cell"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="@dimen/ui_10_dip"
            android:gravity="right"
            android:background="@color/mistyrose"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:text="sn编码："></TextView>


        <TextView
            android:id="@+id/txt_sn_number_cell"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_shdate_cell"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingRight="@dimen/ui_10_dip"
            android:gravity="right"
            android:background="@color/mistyrose"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            android:text="收货日期："></TextView>


        <TextView
            android:id="@+id/txt_sh_date_cell"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textColor="@color/blue"
            android:layout_height="wrap_content"
            ></TextView>
    </LinearLayout>

</LinearLayout>