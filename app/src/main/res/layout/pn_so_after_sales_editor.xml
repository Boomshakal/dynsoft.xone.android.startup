<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:orientation="vertical">

    <dynsoft.xone.android.control.PaneHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <dynsoft.xone.android.control.ButtonTextCell
                android:id="@+id/txt_sn_number_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:text="使用手机扫取二维码"
                android:id="@+id/txt_b1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <dynsoft.xone.android.control.TextCell
                android:id="@+id/txt_item_code_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <dynsoft.xone.android.control.TextCell
                android:id="@+id/txt_item_name_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <dynsoft.xone.android.control.TextCell
                android:id="@+id/txt_user_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <dynsoft.xone.android.control.TextCell
                android:id="@+id/txt_express_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <dynsoft.xone.android.control.TextCell
                android:id="@+id/txt_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <dynsoft.xone.android.control.TextCell
                android:id="@+id/txt_field_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <dynsoft.xone.android.control.TextCell
            android:id="@+id/txt_comment_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <CheckBox
              android:id="@+id/checkbox_print"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />



          <TextView
              android:text="打印标签"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="match_parent" />

          <CheckBox
              android:id="@+id/is_history"
              android:layout_gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

          <TextView
              android:text="历史物料"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="match_parent" />
      </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <dynsoft.xone.android.control.PaneFooter
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_commit"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter" />
    </dynsoft.xone.android.control.PaneFooter>

</LinearLayout>
