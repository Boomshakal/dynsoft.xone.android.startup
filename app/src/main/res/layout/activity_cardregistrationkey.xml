    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:focusable="false"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="4"></GridView>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/black" />

            <include
                layout="@layout/cardregistrationkey_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/black" />

            <ListView
                android:id="@+id/listview_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/megmeet_green"
                android:dividerHeight="1dp"></ListView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/black" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/black" />

            <include
                layout="@layout/cardregister__all_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/black" />

            <ListView
                android:id="@+id/listview_skill"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@color/megmeet_green" />

