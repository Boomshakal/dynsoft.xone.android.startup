<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:orientation="vertical" >
    
    <dynsoft.xone.android.control.PaneHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        
       <LinearLayout
	       android:id="@+id/body"
	       android:orientation="vertical"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:layout_weight="1">

	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_task_order_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	
	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_prod_code_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	        
	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_prod_name_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	
	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_machine_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	        
	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_program_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	        
	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_count_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	        
	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_item_code_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	        
	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_item_name_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	
	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_quantity_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	        
	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_position_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	        
	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_feeder_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	        
	        <dynsoft.xone.android.control.TextCell
	            android:id="@+id/txt_worker_cell"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
    
   <dynsoft.xone.android.control.PaneFooter
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">
       
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btn_list"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btn_commit"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"/>

    </dynsoft.xone.android.control.PaneFooter>
    
</LinearLayout>
