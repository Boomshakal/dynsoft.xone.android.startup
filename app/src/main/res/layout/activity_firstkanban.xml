<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="vertical">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_changetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:text="生产看板(一部)"
            android:textColor="@color/black"
            android:textSize="@dimen/header_footer_left_right_padding" />

        <ImageView
            android:id="@+id/imageview_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@drawable/megmeet_logo" />

        <TextView
            android:id="@+id/textview_date"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/card_text_size"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/card_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"></GridView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/megmeet_green" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/megmeet_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="开始时间"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="结束时间"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="生产工单"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:scrollbars="none">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="产品型号"
                android:textColor="@color/black"
                android:textSize="@dimen/card_text_size" />
        </HorizontalScrollView>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scrollbars="none">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="段别"
                android:textColor="@color/black"
                android:textSize="@dimen/card_text_size" />
        </HorizontalScrollView>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scrollbars="none">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="计划产能"
                android:textColor="@color/black"
                android:textSize="@dimen/card_text_size" />
        </HorizontalScrollView>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scrollbars="none">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lines="1"
                android:text="实际产能"
                android:textColor="@color/black"
                android:textSize="@dimen/card_text_size" />
        </HorizontalScrollView>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="节拍(S)"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scrollbars="none">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lines="1"
                android:text="不良数"
                android:textColor="@color/black"
                android:textSize="@dimen/card_text_size" />
        </HorizontalScrollView>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scrollbars="none">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="不良率"
                android:textColor="@color/black"
                android:textSize="@dimen/card_text_size" />
        </HorizontalScrollView>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scrollbars="none">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lines="1"
                android:text="产能差异"
                android:textColor="@color/black"
                android:textSize="@dimen/card_text_size" />
        </HorizontalScrollView>

        <!--<ImageView-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@color/megmeet_green" />-->

        <!--<HorizontalScrollView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="3"-->
            <!--android:scrollbars="none">-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:text="差异原因"-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="@dimen/card_text_size" />-->
        <!--</HorizontalScrollView>-->

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/megmeet_green" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:choiceMode="multipleChoice"
        android:divider="@color/megmeet_green"
        android:dividerHeight="1dp"></ListView>

    <!--<ListView-->
    <!--android:id="@+id/listview"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="50dp"-->
    <!--android:choiceMode="multipleChoice"-->
    <!--android:divider="@color/megmeet_green"-->
    <!--android:dividerHeight="1dp"></ListView>-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal">

        <!--<ListView-->
        <!--android:id="@+id/listview_1"-->
        <!--android:divider="@color/black"-->
        <!--android:dividerHeight="1dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"></ListView>-->

        <!--<ListView-->
        <!--android:id="@+id/listview_1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:divider="@color/black"-->
        <!--android:dividerHeight="1dp"></ListView>-->

        <!--<include layout="@layout/kanban_listview1" />--> <!-- 产能相关 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></com.github.mikephil.charting.charts.PieChart>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_fresh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/imageview_fresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:clickable="true" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <!--          显示图表           -->
        <LinearLayout
            android:id="@+id/linearlayout_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="HI-TU"
                    android:textColor="@color/blue" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchart_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"></com.github.mikephil.charting.charts.BarChart>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="AS"
                    android:textColor="@color/blue" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchart_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"></com.github.mikephil.charting.charts.BarChart>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="PK"
                    android:textColor="@color/blue" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchart_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"></com.github.mikephil.charting.charts.BarChart>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/light_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/ikahe_qty_text_size" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="@dimen/ikahe_qty_text_size"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="@dimen/card_text_size" />
    </LinearLayout>
</LinearLayout>

