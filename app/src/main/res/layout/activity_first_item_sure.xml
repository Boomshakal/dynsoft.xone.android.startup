<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/white"
        android:background="@color/parameter_color"
        android:textSize="@dimen/x30"
        android:text="首件确认打卡"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <dynsoft.xone.android.control.TextCell
            android:id="@+id/textcell_first_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></dynsoft.xone.android.control.TextCell>

        <dynsoft.xone.android.control.TextCell
            android:id="@+id/textcell_task_order_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></dynsoft.xone.android.control.TextCell>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <dynsoft.xone.android.control.ButtonTextCell
            android:id="@+id/textcell_work_line"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></dynsoft.xone.android.control.ButtonTextCell>

        <dynsoft.xone.android.control.ButtonTextCell
            android:id="@+id/textcell_user_card"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></dynsoft.xone.android.control.ButtonTextCell>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image_1"
            android:clickable="true"
            android:padding="@dimen/x15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/image_2"
            android:padding="@dimen/x15"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_textview"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="返回"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_textview"
            android:clickable="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="提交"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>