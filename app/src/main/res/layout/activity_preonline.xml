    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@color/megmeet_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="作业信息"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="批量"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="作业人员"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="上线时间"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="加工物料"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="加工方式"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="位号"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="累计工时（时）"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="备注"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="IPQC确认"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="启动"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="离线"
            android:textColor="@color/black"
            android:textSize="@dimen/card_text_size" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:src="@color/megmeet_green" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@color/megmeet_green" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="multipleChoice"
        android:divider="@color/megmeet_green"
        android:dividerHeight="2dp"></ListView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@color/megmeet_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线人数 : "
            android:textColor="@color/megmeet_green"
            android:textSize="@dimen/header_footer_left_right_padding" />

        <TextView
            android:id="@+id/textview_online_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/megmeet_green"
            android:textSize="@dimen/header_footer_left_right_padding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="工时合计(时) : "
            android:textColor="@color/megmeet_green"
            android:textSize="@dimen/header_footer_left_right_padding" />

        <TextView
            android:id="@+id/textview_time_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/megmeet_green"
            android:textSize="@dimen/header_footer_left_right_padding" />
    </LinearLayout>

</LinearLayout>