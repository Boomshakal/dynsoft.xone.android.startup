<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:orientation="vertical" >

    <dynsoft.xone.android.control.PaneHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

       <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
      
            <dynsoft.xone.android.control.TextCell
                android:id="@+id/txt_mobile_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

             <dynsoft.xone.android.control.TextCell
                android:id="@+id/txt_storage_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <dynsoft.xone.android.control.TextCell
                android:id="@+id/txt_item_code_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />  
                
          
            <dynsoft.xone.android.control.TextCell
                android:id="@+id/txt_item_name_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /> 
                
            <dynsoft.xone.android.control.TextCell
                android:id="@+id/txt_usernumber_code_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /> 

      <CheckBox
	            android:id="@+id/isbinding"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="5dp"
	            android:layout_marginLeft="80dp"
	            android:text="绑定周转车储位"
	            android:textColor="#ff000000" ></CheckBox>

        </LinearLayout>
    </ScrollView>

    <dynsoft.xone.android.control.PaneFooter
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_commit"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter" />
    </dynsoft.xone.android.control.PaneFooter>

</LinearLayout>