<?xml version="1.0" encoding="utf-8"?>
<dynsoft.xone.android.ui.CheckLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_linearlayout_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@color/megmeet_green" />

    <TextView
        android:id="@+id/textview_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="3"
        android:textColor="@color/blue"
        android:textSize="@dimen/card_text_size" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@color/megmeet_green" />

    <TextView
        android:id="@+id/textview_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="2"
        android:textColor="@color/blue"
        android:textSize="@dimen/card_text_size" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@color/megmeet_green" />

    <TextView
        android:id="@+id/textview_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="3"
        android:textColor="@color/blue"
        android:textSize="@dimen/card_text_size" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:src="@color/megmeet_green" />
</dynsoft.xone.android.ui.CheckLinearLayout>